<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    
    <ListPreference 
        android:defaultValue="wifi"
        android:entries="@array/pref_sync_connection_titles"
        android:entryValues="@array/pref_sync_connection_values"
        android:key="sync_connection"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_connection" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="sync_nsfw"
        android:summary="@string/pref_description_sync_nsfw"
        android:title="@string/pref_title_sync_nsfw" />
    
    
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="6"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />

    <!--
         This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines.
    -->
    <Preference android:title="@string/pref_title_system_sync_settings" >
        <intent android:action="android.settings.SYNC_SETTINGS" />
    </Preference>

</PreferenceScreen>
